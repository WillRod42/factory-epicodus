@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add Engineer</h1>
<h5>Add engineer to this machine: @Html.DisplayFor(model => model.Name)</h5>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back", "Index", "Machine", null, new { @class = "btn btn-primary" })</p>